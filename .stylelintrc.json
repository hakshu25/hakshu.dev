{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "max-nesting-depth": 2,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind"]
      }
    ],
    "at-rule-no-deprecated": [
      true,
      {
        "ignoreAtRules": ["apply"]
      }
    ]
  },
  "ignoreFiles": ["stories/**/*"]
}
