{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>flyhighair/renovate-config"],
  "packageRules": [
    {
      "groupName": "eslint packages",
      "matchPackagePatterns": ["^eslint", "^@typescript-eslint/"]
    },
    {
      "groupName": "stylelint packages",
      "matchPackagePatterns": ["^stylelint"]
    },
    {
      "groupName": "react packages",
      "matchPackagePatterns": ["^react", "^@types/react", "^@types/react-dom"]
    },
    {
      "groupName": "test packages",
      "matchPackagePatterns": [
        "^@?vitest",
        "^@vitejs",
        "^@testing-library/",
        "jsdom",
        "^@types/testing-library"
      ]
    },
    {
      "groupName": "storybook packages",
      "matchPackagePatterns": ["^@storybook"]
    }
  ]
}
