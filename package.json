{
  "name": "hakshu.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "analyze": "ANALYZE=true pnpm build",
    "analyze:server": "BUNDLE_ANALYZE=server pnpm build",
    "analyze:browser": "BUNDLE_ANALYZE=browser pnpm build",
    "lint": "oxlint --import-plugin --react-plugin --nextjs-plugin --tsconfig ./tsconfig.json",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "stylelint": "stylelint 'app/*.css'",
    "stylelint:fix": "stylelint 'app/*.css' --fix",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@vercel/analytics": "^1.0.0",
    "feed": "5.1.0",
    "highlight.js": "11.11.1",
    "microcms-js-sdk": "3.2.0",
    "next": "15.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "shiki": "^3.9.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.5",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^9.0.0",
    "@storybook/addon-styling-webpack": "^2.0.0",
    "@storybook/blocks": "^8.0.0",
    "@storybook/nextjs": "^9.0.0",
    "@storybook/react": "^9.0.0",
    "@storybook/testing-library": "^0.2.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/jest-dom": "6.7.0",
    "@testing-library/react": "16.3.0",
    "@types/react": "19.1.10",
    "@types/testing-library__jest-dom": "6.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "husky": "9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "16.1.5",
    "oxlint": "^1.1.0",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "react-test-renderer": "19.1.1",
    "storybook": "^9.0.0",
    "stylelint": "16.23.1",
    "stylelint-config-standard": "39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "4.1.12",
    "typescript": "5.9.2",
    "vitest": "^3.0.0"
  },
  "engines": {
    "pnpm": ">=7"
  },
  "lint-staged": {
    "*.{ts,tsx}": "oxlint --import-plugin --react-plugin --nextjs-plugin --tsconfig ./tsconfig.json --fix",
    "*.css": "stylelint --fix",
    "*": "prettier --ignore-unknown --write"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.10"
    }
  }
}
